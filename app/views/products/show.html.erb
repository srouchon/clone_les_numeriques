<div class="row d-grid">
  <div id="product-title">
    <h1><%= @product.name %></h1>
    <h4><%= @product.snippet %></h4>
  </div>
  <div id="product-img">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @product.photos.each do |photo| %>
        <div class="carousel-item active">
          <%= cl_image_tag photo.key, class: 'd-block w-50' %>
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div id="product-content">
    <p><%= @product.description %></p>
    <p><%= @product.design %></p>
    <p><%= @product.performance %></p>
    <p><%= @product.autonomy %></p>
  </div>
</div>
<div class="row d-flex justify-content-between mt-3">
  <div class="advantages w-50">
    <h3>Points forts</h3>
    <p><%= @product.advantages %></p>
  </div>
  <div class="disadvantages w-50">
    <h3>Points faibles</h3>
    <p><%= @product.disadvantages %></p>
  </div>
</div>

<div class="product-btn">
  <div class="product-edit mt-2">
    <%= link_to 'Edit product', edit_product_path(@product), class: 'btn btn-warning'%>
  </div>
  <div class="product-destroy mt-2">
    <%= link_to 'Remove product', product_path(@product), method: :delete, class: 'btn btn-danger'%>
  </div>
  <div class="back-btn mt-2">
    <%= link_to '< Back to Home', root_path, class: 'btn btn-primary' %>
  </div>
</div>